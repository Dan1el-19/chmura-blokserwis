# Monorepo root .gitignore for frontend and backend

# Dependencies
frontend/**/node_modules/
backend/**/node_modules/
frontend/.pnp
frontend/.pnp.*
frontend/.yarn/*
!frontend/.yarn/patches
!frontend/.yarn/plugins
!frontend/.yarn/releases
!frontend/.yarn/versions
backend/.pnp
backend/.pnp.*
backend/.yarn/*
!backend/.yarn/patches
!backend/.yarn/plugins
!backend/.yarn/releases
!backend/.yarn/versions

# Env files (sensitive)
.env*
.dev.vars

# Logs
logs
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*
.pnpm-debug.log*
firebase-debug.log*

# Runtime data / PIDs
pids
*.pid
*.seed
*.pid.lock

# Build outputs
.dist/
dist/
build/
.out/
out/

# Frontend specific (Next.js, Nuxt, Vuepress, etc.)
frontend/.next/
frontend/.nuxt/
frontend/.vuepress/dist

# Coverage
coverage/
.nyc_output

# Caches
.cache
.parcel-cache
.rpt2_cache/
.rts2_cache_cjs/
.rts2_cache_es/
.rts2_cache_umd/

# TypeScript
*.tsbuildinfo
next-env.d.ts

# Firebase
.firebase/

# Vercel
.vercel

# Cloudflare Wrangler local state (for backend)
backend/.wrangler/

# Optional npm/yarn caches
.npm
.eslintcache
.yarn-integrity

# IDE/editor
.vscode/
.idea/
*.swp
*.swo
*~

# OS generated files
.DS_Store
Thumbs.db
ehthumbs.db
Desktop.ini

# Output of `npm pack`
*.tgz

# TernJS port file
.tern-port
